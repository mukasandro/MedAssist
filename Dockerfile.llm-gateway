# Build stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY src/MedAssist.LlmGateway.Api/MedAssist.LlmGateway.Api.csproj src/MedAssist.LlmGateway.Api/
RUN dotnet restore src/MedAssist.LlmGateway.Api/MedAssist.LlmGateway.Api.csproj

COPY src/MedAssist.LlmGateway.Api/ src/MedAssist.LlmGateway.Api/
RUN dotnet publish src/MedAssist.LlmGateway.Api/MedAssist.LlmGateway.Api.csproj -c Release -o /app/publish /p:UseAppHost=false

# Runtime stage
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final
WORKDIR /app
ENV ASPNETCORE_URLS=http://+:8090
EXPOSE 8090

RUN apt-get update \
    && apt-get install -y --no-install-recommends curl \
    && rm -rf /var/lib/apt/lists/*

COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "MedAssist.LlmGateway.Api.dll"]
